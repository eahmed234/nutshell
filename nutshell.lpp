%{
    #include <string.h>
    #include "nutshell.tab.hpp"
%}

%option noyywrap

%%

"bye"               { return EXIT; }
[a-zA-Z/-]+         { yylval.val = strdup(yytext); return WORD; }
\"(\\.|[^"\\])*\"   { yylval.val = strdup(yytext); return WORD; }
[\n]                { return STOP; }
<<EOF>>             { return 0; }
[ \t]+              { }
.                   { cout << "Unrecognized token starting with " << yytext[0] << endl; }

%%